print(" Boas vindas Ã  Calculadora de Rachadinhas!")
print()
print("Aqui, vocÃª pode escolher dois modos de divisÃ£o de contas!")
print("1 - Modo igualitÃ¡ria")
print("2 - Modo proporcional (quem comeu mais, paga mais)")
print()
modos = input("Escolha entre 1 ou 2: ")
conta = float(input("Qual foi o total da conta a pagar? R$"))


#===========Modo IgualitÃ¡rio==========
if modos == "1":
   pessoas = int(input("Quantas pessoas vÃ£o dividir a conta?"))
   valor_de_cada = conta / pessoas
   print(f"\nðŸ’µ Cada pessoa irÃ¡ pagar: R${valor_de_cada:.2f}")


#============Modo proporcional==========
elif modos == "2":
   pessoas = int(input("Qual o total de pessoas? "))
   consumos = []
   soma_consumo = 0


   print("\nðŸ§¾Informe quanto foi o consumo de cada pessoa:")
   for i in range(pessoas):
       valor = float(input(f"Pessoa {i+1}: R$"))
       consumos.append(valor)
       soma_consumo += valor
   print("\nðŸª™ DivisÃ£o Proporcional:")
   valor_igualitario = conta / pessoas


   for i in range(pessoas):
       proporcao = consumos [i] / soma_consumo
       valor_pagar = proporcao * conta
       diferenca = valor_igualitario - valor_pagar


       if diferenca > 0:
           print(f"  Pessoa {i + 1}: R${valor_pagar:.2f} (ðŸ¤‘ Economizou R${diferenca:.2f})")
       elif diferenca < 0:
           print(f"  Pessoa {i + 1}: R${valor_pagar:.2f} (ðŸ˜£ Pagou R${-diferenca:.2f} a mais)")
       else:
           print(f"  Pessoa {i + 1}: R${valor_pagar:.2f} (âš–ï¸ Pagou exatamente o valor mÃ©dio)")


else:
   print('âŒ OpÃ§Ã£o invÃ¡lida. Tente novamente.')
