def calcular_imposto(renda_mensal: float) -> float:
   if renda_mensal <= 2259.20:
       print("VocÃª estÃ¡ isento de pagar esse ano!")
       return 0.0
   elif renda_mensal <= 2826.65:
       return renda_mensal * 0.075 - 169.44
   elif renda_mensal <= 3751.05:
       return renda_mensal * 0.15 - 381.44
   elif renda_mensal <= 4664.68:
       return renda_mensal * 0.225 - 662.77
   else:
       return renda_mensal * 0.275 - 896.0


precisa_declarar = False
#=================renda anual ==========================
renda = float(input("Qual foi sua renda anual no ano passado? R$"))
renda_mensal = renda / 12
if renda > 33888:
   print("Sim! VocÃª Ã© obrigado a declarar o IR desse ano!")
   precisa_declarar = True


#==================investimentos ========================
investimentos = input("VocÃª investe na bolsas de valores? (sim/nÃ£o) ").lower()
if investimentos == "sim":
   venda_de_acao = (input("Vendeu alguma aÃ§Ã£o? (sim/nÃ£o) ")).lower()
   if venda_de_acao == "sim":
       lucro = float(input("Qual foi o total vendido? R$"))
       if lucro > 40000:
           print("Sim, vocÃª deve declarar por ter vendido mais de R$40.000 em aÃ§Ãµes.")
           precisa_declarar = True
       else:
           lucro2 = float(input("Qual foi o lucro total com a venda de aÃ§Ãµes? R$ "))
           if lucro2 > 0:
               print("Sim, vocÃª deve declarar por ter obtido lucro tributÃ¡vel.")
               precisa_declarar = True
           else:
               print("NÃ£o precisa declarar por investimentos.")
   else:
       print("Sem vendas de aÃ§Ãµes, provavelmente nÃ£o precisa declarar por investimentos.")


#==============outros investimentos ===================
rend_isentos = input("Recebeu rendimentos isentos ou nÃ£o tributÃ¡veis? (sim/nÃ£o) ").lower()
