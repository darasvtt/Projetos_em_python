import random
from random import randint
from art import logo

tentativas = 10

def checagem(user_guess, actual_guess, tentativas):
    if user_guess > actual_guess:
        print("Muito alto, tente um número menor")
        return tentativas - 1
    elif user_guess < actual_guess:
        print("Muito baixo, tente um número maior")
        return tentativas - 1
    else:
        print(f"Você acertou! A resposta era {actual_guess}")


def game():
    print(logo)
    print("Bem-vindo ao advinhador de números!")
    print("Estou pensando em um número entre 1 e 100")
    answer = randint(1, 100)

    guess = 0
    while guess != answer:
        print(f'Você tem {tentativas} tentativas. ')

        guess = int(input("Faça uma escolha: "))

        turns = checagem(guess, answer, tentativas)
        if turns == 0:
            print("Você perdeu! Usou todas as suas tentativas.")
            return
        elif guess != answer:
            print("Tente de novo.")

game()
